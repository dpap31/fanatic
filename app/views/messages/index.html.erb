<%= link_to("<< Back to Menu", {:controller => "menu"}, :class => 'back-link') %>

<h1>Chat</h1>
<html>
  <head>
    <%= stylesheet_link_tag    "application" %>
    <%= csrf_meta_tag %>
  </head>
    
<ul id="chat">
  <%= render @messages %>
</ul>

<%= form_for Message.new, remote: true do |f| %>
  <%= f.text_field :content %>
  <%= f.submit "Send" %>
<% end %>

<%= subscribe_to "/messages/new" %>