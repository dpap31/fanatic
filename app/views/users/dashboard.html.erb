		<h2>My Posts</h2>
	<%= link_to "Create Post", new_post_path, :class => 'btn btn-primary btn-block'%>
	<% end %>
</div>
<div class="col-md-3 column pull-left">
	<%= image_tag(@user.image, size: "140x140", class: 'profile_pic') %>
	<h4>
		Stats
	</h4>
	<hr>
	<dl class="dl-horizontal">
		<dt>
			Post Count
		</dt>
		<dd>
			<%= @my_posts_count %>
		</dd>
		<dt>
			Cheers
		</dt>
		<dd>
			<%= @my_posts_cheers %>
		</dd>
		<dt>
			Following
		</dt>	
		<dd>
		<%= @user.friendships.count%>
		</dd>
		<div class = 'following_images'>
				<% for friendship in @user.friendships.take(8) %>
			<ul id="grid">
					<li><%= image_tag(friendship.friend.image, size: '40x40') %></li>
				<% end %>
				</ul>
			</dl>
		<h4>
		<div class = 'team_images'>
			Teams
		</h4>
		<hr>
		    <ul id="grid">
				<% @teams.each do |team| %>
				  <%= link_to tag_path(team.name) do%>
				    <li><%= image_tag("logos/#{team.id}.gif", size: "90x60")%></li>
				  <% end %>
			    <% end %>
			</ul>	
		<div>
		<h4>Activity</h4>
		<hr>
		<dl>
			<dd>
			<%= render template: 'layouts/_activities.html.erb'%>
			</dd>
		</dl>
	</div>
