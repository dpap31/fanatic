	<%if Post.all.where(:user_id => current_user.id)%>
			<h2> <i class="glyphicon glyphicon-pencil"></i> <%= link_to "My Posts", user_posts_path(@current_user)%></h2>
			<hr>
		<table>
			<tr>
				<% Post.all.where(:user_id => current_user.id).order("created_at DESC").limit(6).each do |post| %>
				<td>
				<%= link_to post_path(post.id) do %>
					<div class="thumbnail">
						<%= image_tag(post.image, size: "200x200")%>
						<h5>
							<%= post.title %>
