<!DOCTYPE html>
<html>
<head>
	<title><%=@user.name%>'s Fanatic Dashboard</title>
	<%= stylesheet_link_tag "dashboard" %>
</head>
<div class="container">
	<div class="row clearfix">
		<div class="col-md-8 column">
		   <div id="title">
     <a href="/posts"><strong><i class="glyphicon glyphicon-star-empty"></i>  All Posts</strong></a> 
   </div> 

   <div id="new_button">
     <%if can? :create, Post %>
     <a href="/posts/new"><strong><i class="glyphicon glyphicon-plus-sign"></i>  New Post</strong></a>
     <% end %>
   </div>  
   <br>  
   <hr>
   <div id='user_teams'>
	   <%if @teams.first%>
			<div class='teamname'>
			<h4><i class="glyphicon glyphicon-link"></i> <%= link_to "#{@teams.first.location} #{@teams.first.name}",tag_path(@teams.first.name)%></h4>
			</div>
			<table>
				<tr>
					<% hottness(Post.tagged_with(@teams.first.name)).take(3).each do |post| %>
					<td>
					<%= link_to post_path(post.id) do%>
						<div class="thumbnail">
							<%= image_tag(post.image, size: "200x200")%>
							<h5>
								<%= post.title %>
							</h5>
							<p>
								
							</p>
						</div>
				</td>
				<% end %>
				<% end %>
			</tr>
		</table>
		<% end %>
