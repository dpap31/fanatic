<%= image_tag(@user.image) %>
<h3><%= @user.name %> Profile</h3>
<h5><%= @user.location %></h5>
<h3>Post Count</h3>
<%= @my_posts_count %>
<hr>
<h3>Post Cheers</h3>
<%= @my_posts_cheers %>
<h3>Friends</h3>
<hr>
<ul>
<% for friendship in @user.friendships %>
<li>
<%=h friendship.friend.name %>
(<%= link_to "remove", friendship, :method => :delete %>)
</li>
<% end %>
</ul>
<ul>
  <% for user in @user.inverse_friends %>
    <li><%= user.name %></li>
  <% end %>
</ul>
<p><%= link_to "Find Friends", users_path %>

<h3>Teams</h3>
<hr>
<% @teams.each do |team| %>
<%= team.name %>
<%= team.location %>
<%= team.abbreviation %>
<%=Post.tagged_with(team.name).page(params[:page]).per_page(3).inspect%>
<hr>
<% end %>


<h3>My Posts</h3>
<hr>
<%= @my_posts.inspect %>

<hr>





