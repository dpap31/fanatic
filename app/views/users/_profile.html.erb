<%  for friendship in @user.friendships.take(8) %>
<div class="cd-member-bio member-<%= friendship.friend.id%>">
		<div class="cd-member-bio-pict"> <!-- background image -->
			<%= image_tag("team_images/#{friendship.friend.teams.first.id}.jpg", size: "800x486")%>
		</div> 
		<div class="cd-profile-pic"> <!-- profile pic -->
			<%= link_to image_tag(friendship.friend.image, size: '100x100', class: 'img-circle'), user_posts_path(friendship.friend) %>
		</div>
		<div class="cd-bio-content">
			<h1><%= friendship.friend.name %></h1>
		<div class = "stats">
		<div id='posts'> <%= friendship.friend.posts.count %></div>
		<div id='cheers_count'><%= friendship.friend.reputation_for(:votes).to_i %></div>
		<div id='following_count'><%= friendship.friend.friendships.count%></div>
		<br>
		<div id='posts_label'> Posts</div>
		<div id='cheers_label'>Cheers</div>
		<div id='following_label'>Following</div>
		</div>
			<%= friendship.friend.description %>
		</div> <!-- cd-bio-content -->
	</div> <!-- cd-member-bio -->
	<% end %>